{
    "app-id": "de.haigruppe.summarizer",
    "runtime": "org.gnome.Platform",
    "runtime-version": "44",
    "sdk": "org.gnome.Sdk",
    "command": "summarizer",
    "default-branch": "stable",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "cleanup": [
        "/include",
        "/lib/*.a",
        "/lib/*.la",
        "/lib/pkgconfig",
        "/share/man",
        "/share/doc"
    ],
    "modules": [
        {
            "name": "nltk",
            "buildsystem": "simple",
            "build-commands": [
                "pip3 install --prefix=/app --no-deps ."
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/nltk/nltk",
                    "tag": "3.8.1",
                    "commit": "63a63b1a7793aceceb1efc23bc1fd87e7095f9d5",
                    "x-checker-data": {
                        "type": "git",
                        "tag-pattern": "^([\\d.]+)$"
                    }
                }
            ],
            "modules": [
                {
                    "name": "regex",
                    "buildsystem": "simple",
                    "build-commands": [
                        "pip3 install --prefix=/app --no-deps ."
                    ],
                    "sources": [
                        {
                            "type": "archive",
                            "url": "https://files.pythonhosted.org/packages/d8/29/bd8de07107bc952e0e2783243024e1c125e787fd685725a622e4ac7aeb3c/regex-2023.3.23.tar.gz",
                            "sha256": "dc80df325b43ffea5cdea2e3eaa97a44f3dd298262b1c7fe9dbb2a9522b956a7"
                        }
                    ]
                }
            ]
        },
        {
            "name": "summarizer",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "."
                }
            ]
        }
    ]
}
